
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>RTT</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

</head>
<body>
    <br />
<h4>Client Details</h4>

    <hr />
    <div class="container">
        <p class="navbar-text navbar-right">
            @Html.ActionLink("Export Client Details", "Export")
        </p>
        <table id="myTable" class="display table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Gender</th>
                    <th>ID</th>
                    <th>Nationality</th>
                    <th>Res Address</th>
                    <th>Postal Address</th>
                    <th>Work Address</th>
                    <th>CellPhone</th>
                    <th>WorkPhone</th>
                    <th>HomePhone</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow item in ViewBag.ClientList.Rows)
                {
                    <tr>
                        <td>@item["clientID"].ToString()</td>
                        <td>@item["firstName"].ToString()</td>
                        <td>@item["lastName"].ToString()</td>
                        <td>@item["gender"].ToString()</td>
                        <td>@item["idNumber"].ToString()</td>
                        <td>@item["nationality"].ToString()</td>
                        <td>@item["residentialAddress"].ToString()</td>
                        <td>@item["postalAddress"].ToString()</td>
                        <td>@item["workAddress"].ToString()</td>
                        <td>@item["cellPhone"].ToString()</td>
                        <td>@item["workPhone"].ToString()</td>
                        <td>@item["homePhone"].ToString()</td>
                        <td>@item["email"].ToString()</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = Convert.ToInt32(@item["clientID"].ToString()) }) @Html.ActionLink("Update", "Update", new { id = Convert.ToInt32(@item["clientID"].ToString()) })
                       
                        </td>

                        @*@Html.ActionLink("Delete", "Delete", new { id = Convert.ToInt32(@item["clientID"].ToString()) })*@
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script src="~/Content/jquery.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
    <script src="~/Content/jquery.dataTables.min.js"></script>
    <script src="~/Content/dataTables.bootstrap.min.js"></script>
   

    <script>
        
        $(document).ready(function () {

            $('#myTable').DataTable();

        });
    </script>
   
    </body>
</html>
